<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo_menu"
    tools:context=".MenuActivity">


    <Button
        android:id="@+id/infobtn"
        android:layout_width="49sp"
        android:layout_height="32sp"
        android:layout_marginStart="360sp"
        android:layout_marginTop="100sp"
        android:background="@drawable/sfondo_button"
        android:drawableBottom="@android:drawable/ic_dialog_info"
        android:elevation="1sp"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/impostazioni"
        android:layout_width="140sp"
        android:layout_height="55sp"
        android:layout_marginTop="350sp"
        android:layout_marginEnd="12sp"
        android:background="@drawable/sfondo_button"
        android:drawableStart="@android:drawable/ic_menu_preferences"
        android:fontFamily="@font/audiowide"
        android:elevation="1sp"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:text="@string/opzioni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/editorlv"
        android:layout_width="140sp"
        android:layout_height="55sp"
        android:layout_marginTop="350dp"
        android:layout_marginStart="12sp"
        android:background="@drawable/sfondo_button"
        android:drawableStart="@android:drawable/ic_menu_more"
        android:elevation="1sp"
        android:fontFamily="@font/audiowide"
        android:padding="16sp"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:text="@string/editor_lv"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_game"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginTop="135sp"
        android:background="@drawable/sfondo_button"
        android:drawableStart="@android:drawable/ic_input_add"
        android:fontFamily="@font/audiowide"
        android:padding="16sp"
        android:elevation="1sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:text="@string/nuovo_gioco"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp" />

    <Button
        android:id="@+id/own_game"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginTop="185sp"
        android:background="@drawable/sfondo_button"
        android:drawableStart="@drawable/covid_green"
        android:drawablePadding="2sp"
        android:fontFamily="@font/audiowide"
        android:padding="16sp"
        android:elevation="1sp"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:text="@string/variante_virus"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <Button
        android:id="@+id/multiply"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginTop="235sp"
        android:background="@drawable/sfondo_button"
        android:padding="16sp"
        android:text="@string/multigiocatore"
        android:elevation="1sp"
        android:drawableStart="@android:drawable/ic_menu_share"
        android:fontFamily="@font/audiowide"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



    <Button
        android:id="@+id/Profile"
        android:layout_width="wrap_content"
        android:layout_height="45sp"
        android:layout_marginTop="285sp"
        android:background="@drawable/sfondo_button"
        android:padding="16sp"
        android:text="@string/profilo"
        android:elevation="1sp"
        android:drawableStart="@android:drawable/ic_menu_myplaces"
        android:fontFamily="@font/audiowide"
        android:shadowColor="#A8A8A8"
        android:shadowRadius="5"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>